            <!-- Pestaña AI Scanner -->
            <div class="tab-pane fade" id="ai" role="tabpanel">
                <div class="row">
                    <!-- Sección de upload -->
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-robot"></i> AI Scanner - Facturas y Recibos</h5>
