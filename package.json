{
  "name": "casa-gastos",
  "version": "1.0.0",
  "description": "Aplicaci√≥n web para gestionar gastos e ingresos del hogar",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "npm run minify-js && npm run minify-css",
    "minify-js": "uglifyjs public/js/casa-gastos.js -o public/js/casa-gastos.min.js -c -m",
    "minify-css": "cleancss -o public/css/casa-gastos.min.css public/css/casa-gastos.css",
    "build-prod": "npm run build && NODE_ENV=production node app.js"
  },
  "keywords": [
    "gastos",
    "hogar",
    "finanzas",
    "presupuesto"
  ],
  "author": "Dioni Pereyra",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "d3": "^7.9.0",
    "d3-sankey": "^0.12.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "openai": "^4.104.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "html-minifier": "^4.0.0",
    "nodemon": "^3.0.1",
    "uglify-js": "^3.19.3"
  }
}
