# Variables de Entorno para Producción
# Copia este archivo como .env.production en tu servidor

# Configuración de la aplicación
NODE_ENV=production
PORT=3000

# Base de datos (Railway las configura automáticamente)
# Solo necesitas estas si usas otro servicio
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_contraseña
DB_NAME=casaGastos

# OpenAI API Key (para procesamiento de facturas con IA)
OPENAI_API_KEY=tu_openai_api_key_aqui

# Modelo OpenAI (opcional - por defecto: gpt-4o-mini)
# Opciones: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Configuración de seguridad (opcional)
SESSION_SECRET=tu_session_secret_muy_segura_aqui